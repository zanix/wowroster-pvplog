<Ui xmlns="http://www.blizzard.com/wow/ui/"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Script file="localization.lua"/>
    <Script file="PvPLog.lua"/>
    <Frame name="PvPLogFrame">
        <Scripts>
            <OnLoad>
                PvPLogOnLoad();
            </OnLoad>
            <OnEvent>
                PvPLogOnEvent();
            </OnEvent>
        </Scripts>
    </Frame>
    <Frame name="PvPLogTargetFrame" 
            parent="UIParent"
            enableMouse="false"
            movable="false"
            frameStrata="LOW"
            hidden="true"
            toplevel="true">
        <Size>
            <AbsDimension x="128" y="32"/>
        </Size>
        <Anchors>
            <Anchor point="TOP" relativeTo="TargetFrameHealthBar" relativePoint="BOTTOM">
                <Offset>
                    <AbsDimension x="-2" y="-5"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">
                <FontString name="PvPLogTargetText" inherits="TextStatusBarText"/>
            </Layer>
        </Layers>
        <Scripts>
        <OnMouseUp>
                PvPLog_OnMouseUp(arg1);
            </OnMouseUp>
            <OnMouseDown>
                PvPLog_OnMouseDown(arg1);
            </OnMouseDown>
        </Scripts>
    </Frame>

    <GameTooltip name="PvPLogTooltip" inherits="GameTooltipTemplate">
        <Scripts>
          <Onload>
            this:SetOwner(UIParent, "ANCHOR_NONE");
          </Onload>
        </Scripts>
    </GameTooltip>
</Ui>
